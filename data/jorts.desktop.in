[Desktop Entry]
Name=Jorts
GenericName=Sticky notes
Comment=Write down notes, reminders, random thoughts and other short-term informations
Icon=io.github.ellie_commons.jorts
Exec=io.github.ellie_commons.jorts
Type=Application
Categories=Office;GTK;
Keywords=text;plain;plaintext;notepad;notes;sticky;post-it;
Terminal=false
StartupNotify=true
SingleMainWindow=false
Actions=NewNote;NewFromClipboard;Preferences;

[Desktop Action NewNote]
Name=New sticky note
Icon=list-add
Exec=io.github.ellie_commons.jorts --new-note

[Desktop Action NewFromClipboard]
Name=New note from clipboard
Icon=edit-paste
Exec=io.github.ellie_commons.jorts --new-from-clipboard

[Desktop Action Preferences]
Name=Show Preferences
Icon=open-menu
Exec=io.github.ellie_commons.jorts --preferences
